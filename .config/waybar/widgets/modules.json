{
    "include": [
        "~/.config/ml4w/settings/waybar-quicklinks.json",
        "~/.config/waybar/modules.json"
    ],
    "clock": {
        "interval": 1,
        "format": "{:%a \n%d %b, %Y\n%H:%M}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "clock#time": {
        "interval": 1,
        "format": "{:%H:%M}"
    },
    "custom/music": {
        "format": "{icon}{}",
        "format-icons": {
            "Paused": " ",
            "Stopped": "&#x202d;ﭥ "
        },
        "escape": true,
        "tooltip": true,
        "exec": "$HOME/.config/hypr/scripts/caway.sh -b 16",
        "return-type": "json",
        "on-click": "playerctl play-pause",
        "on-scroll-up": "playerctl previous",
        "on-scroll-down": "playerctl next",
        "on-click-right": "g4music",
        "max-length": 40
    },
    "custom/text": {
        "format": "<span id='test'>hello</span>",
        "exec": "$HOME/.config/waybar/scripts/custom-clock.sh",
        "return-type": "json"
    },
    "custom/yae": {
        "format": " ",
        "on-click": "~/dotfiles/.config/ml4w/.config/rofi-theme/launchers/type-3/launcher.sh",
        "tooltip": false
    },
    "custom/schedimage": {
        "format": " ",
        "tooltip": false
    },
    "custom/greetings": {
        "format": "Hello, dej!",
        "on-click": "~/dotfiles/.config/ml4w/.config/rofi-theme/launchers/type-3/launcher.sh",
        "tooltip": false
    },
    // Quicklinks
    "custom/browser": {
        "format": "",
        "on-click": "~/.config/ml4w/settings/browser.sh",
        "tooltip-format": "Open Browser"
    },
    "custom/filemanager": {
        "format": "",
        "on-click": "~/.config/ml4w/settings/filemanager.sh",
        "tooltip-format": "Open filemanager"
    },
    "custom/codeeditor": {
        "format": "",
        "on-click": "cursor",
        "tooltip-format": "Open Code Editor"
    },
    "group/dock": {
        "orientation": "horizontal",
        "modules": [
            "custom/appmenuicon",
            "custom/filemanager",
            "custom/codeeditor",
            "custom/browser",
            "custom/wallpaper",
            "custom/settings",
            "custom/keybindings",
            "custom/waybarthemes"
        ]
    }
}